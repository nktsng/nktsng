#include<stdio.h>
void main()
{
    int n, i, j=0, k=0;
    int arr[15], p[15], neg[15];
    printf("Enter number of elements in the 1D array : ");
    scanf("%d",&n);
    printf("Enter %d elements : \n", n);
    for(i=0; i<n; i++)
    {
        pritnf("Element %d = ", i+1);
        scanf("%d",&arr[i]);
    }
    for(i=0; i<n; i++)
    {
        if(arr[i]>0)
        {
            arr[i] = p[j];
            j++;
        }
        else
        {
            arr[i] = neg[k];
            k++;
        }
    }
    printf("\nThe positive elements are : \n");
    for(i=0;i<j;i++)
    {
        printf("%d ",p[i]);
    }
    printf("\nThe negative elements are :\n");
    for(i=0;i<k;i++)
    {
        printf("%d ", neg[i]);
    }
}
